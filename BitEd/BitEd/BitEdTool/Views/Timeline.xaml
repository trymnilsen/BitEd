<UserControl x:Class="BitEdTool.Views.Timeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ToolView="clr-namespace:BitEdTool.ViewModel.Timeline"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions> 
            <ColumnDefinition MinWidth="250"/>
            <ColumnDefinition Width="5px"/>            <ColumnDefinition MinWidth="50px"/>
        </Grid.ColumnDefinitions> 
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--GridSplitter-->
        <GridSplitter Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Center"  VerticalAlignment="Stretch" Width="5" Background="Blue"/>
        <!-- Timeline controls-->
        <TextBlock Grid.Column="0" Text="TimelineControlls" Name="TimeLineControls"/>
        <!--Timeline Slider-->
        <Slider Grid.Column="2" Style="{DynamicResource TimelineSliderStyle}" IsSnapToTickEnabled="True" TickFrequency="1"/>
        <!--Sliderbackround-->
        <!--SpriteControls-->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <ListBox Grid.Column="0" Background="Transparent" ItemsSource="{Binding SpriteElements}" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type ToolView:TimelineSpriteViewModel}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0"/>
                            <CheckBox Grid.Column="1"/>
                            <ToggleButton Grid.Column="2" Content=">"/>
                            <TextBlock Grid.Column="3" Text="{Binding Model}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1" Content="Add Frame" Command="{Binding AddFrameCommand}"/>
        </Grid>
        <!--Sprite timeline representation-->
    </Grid>
</UserControl>
